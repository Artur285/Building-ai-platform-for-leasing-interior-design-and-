{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Flask Server",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": [
        "main.py"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Flask Server (Debug Mode)",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": [
        "main.py"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "env": {
          "FLASK_DEBUG": "True"
        }
      }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": [
        "test_api.py"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Run Examples",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": [
        "examples.py"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": [
        "-m",
        "pip",
        "install",
        "-r",
        "requirements.txt"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Create Virtual Environment",
      "type": "shell",
      "command": "python3",
      "args": [
        "-m",
        "venv",
        "venv"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
